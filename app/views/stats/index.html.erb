<h2 class="text-center">Overall statistics</h2>
<div style="display: flex;justify-content: space-around;margin: 30px;">
 <div style="height:300px;width:180px;margin:10px"><h4>Gender Ratio</h4><%= pie_chart Apply.all.group(:gender).count%></div>
 <div style="height:300px;width:180px;margin:10px"><h4>Age Ratio</h4><%= column_chart Apply.all.group(:date_of_birth).count%></div>
 <div style="height:300px;width:180px;margin:10px"><h4>Family Incomes</h4><%= bar_chart Apply.all.group(:family_income).count%></div>
</div>


<%@const.each do |c|%>
<br>
<h3 class="text-center"><%=c.name%> Constituency statistics</h3>
<div style="display: flex;justify-content: space-around;margin: 30px;">
 <div style="height:300px;width:180px;margin:10px"><h4>Gender Ratio</h4><%= pie_chart Apply.all.where(constituency:c.name).group(:gender).count%></div>
 <div style="height:300px;width:180px;margin:10px"><h4>Age Ratio</h4><%= column_chart Apply.all.where(constituency:c.name).group(:date_of_birth).count%></div>
 <div style="height:300px;width:180px;margin:10px"><h4>Family Incomes</h4><%= bar_chart Apply.all.where(constituency:c.name).group(:family_income).count%></div>
</div>
<br>
<%end%>
